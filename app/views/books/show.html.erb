<div class="card text-white bg-info mb-3" style="max-width: 18rem;">
  <div class="card-header">Showing book details</div>
  <div class="card-body">
    <h5 class="card-title"><strong>Book ID: </strong> <%= @book.id %> <br></h5>
    <p class="card-text">
      <strong>Title </strong> <%= @book.title %><br>
      <strong>No. of Units: </strong> <%= @book.number_Of_units %><br>
      <strong>No. of Units: </strong> <%= @book.description %>
    </p>
  </div>
</div>

<hr />
<div class="card-body">
          <div class="card-text text-left"><%= simple_format(@book.description) %></div>
          <% if logged_in? && (@book.user == current_user || current_user.librarian?) %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-outline-info" %>
          <%= link_to "Delete", book_path(@book), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </div>
<%= link_to 'Back', {:action => 'index'},  class: 'btn btn-primary' %>